<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Billing Information</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="viewFloorAccounts.css">
</head>
<body>

<div class="navbar">
    <a href="#" class="nav-link">Home</a>
    <a href="#" class="nav-link">LOGOUT</a>
</div>

<div class="options">
    <a href="#" class="nav-link">Tenant Accounts</a>
    <a href="#" class="nav-link">Billings</a>
    <a href="#" class="nav-link">Reports</a>
    <a href="#" class="nav-link">Profile</a>
</div>

<h2 class="title">Billing Information</h2>

<div class="filter-section">
    <input type="text" id="searchTenant" placeholder="Search by tenant name..." onkeyup="filterTenants()">
    <select id="billingPeriodFilter" onchange="filterByBillingPeriod()">
        <option value="">Select Billing Period</option>
    </select>
</div>

<div class="table-container">
    <table class="statements">
        <thead>
            <tr>
                <th>REF no</th>
                <th>Account Name</th>
                <th>CU.M</th>
                <th>BASIC CHARGE</th>
                <th>SYSTEM LOSS CHARGE</th>
                <th>WATER MAINTENANCE FUND</th>
                <th>CURRENT CHARGES</th>
                <th>PREVIOUS UNPAID ACCOUNT</th>
                <th>OTHER CHARGES</th>
                <th>TOTAL AMOUNT DUE</th>
                <th>REMARKS</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tenantTable"></tbody>
    </table>
</div>

<div class="buttons">
    <a href="#" class="action-link">Dashboard</a> |
    <a href="#" class="action-link">Previous</a> |
    <a href="#" class="action-link">Next</a> |
</div>

<div id="accountModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h2>Account Information</h2>
        <div id="modalContent"></div>
    </div>
</div>

<script src="viewFloorAccounts.js"></script>
<script id="billing-template" type="text/x-handlebars-template">
    {{#each tenants}}
    <tr class="tenant-row" data-tenant-name="{{accountName}}" data-billing-period="{{billingPeriod}}" data-building="{{building}}" data-floor="{{floor}}">
        <td>{{refNo}}</td>
        <td>{{accountName}}</td>
        <td>{{cuM}}</td>
        <td>{{basicCharge}}</td>
        <td>{{systemLossCharge}}</td>
        <td>{{waterMaintenanceFund}}</td>
        <td>{{currentCharges}}</td>
        <td>{{previousUnpaidAccount}}</td>
        <td>{{otherCharges}}</td>
        <td>{{totalAmountDue}}</td>
        <td>{{remarks}}</td>
        <td><button onclick="openModal('{{refNo}}')">View</button></td>
    </tr>
    {{/each}}
</script>

</body>
</html>
