<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/viewBillingsTenant.css">
    <link rel="stylesheet" href="/modal.css">
    <title>Billing Information</title>
</head>
<body>
    <div class="navbar">
        <a href="#" class="nav-link">Home</a> |
        <a href="#" class="nav-link">Tenant Accounts</a> |
        <a href="#" class="nav-link">Billings</a> |
        <a href="#" class="nav-link">Reports</a> |
        <a href="#" class="nav-link">Profile</a> |
        <a href="#" class="nav-link">LOGOUT</a>
    </div>

    <div class="filter-section">
        <label for="billingPeriod">Billing Period:</label>
        <select id="billingPeriod" name="billingPeriod" onchange="filterByPeriod()">
            {{#each billingPeriods}}
            <option value="{{this}}" {{#if @first}}selected{{/if}}>{{this}}</option>
            {{/each}}
        </select>
    </div>

    <div class="main-content">
        <table class="statement">
            <thead>
                <tr>
                    <th class="table-header">Bill no</th>
                    <th class="table-header">REF no</th>
                    <th class="table-header">Account Name</th>
                    <th class="table-header">CU.M</th>
                    <th class="table-header">BASIC CHARGE</th>
                    <th class="table-header">SYSTEM LOSS CHARGE</th>
                    <th class="table-header">WATER MAINTENANCE FUND</th>
                    <th class="table-header">CURRENT CHARGES</th>
                    <th class="table-header">PREVIOUS UNPAID ACCOUNT</th>
                    <th class="table-header">OTHER CHARGES</th>
                    <th class="table-header">TOTAL AMOUNT DUE</th>
                    <th class="table-header">REMARKS</th>
                    <th class="table-header">Report Issue</th>
                </tr>
            </thead>
            <tbody id="billingTable">
                {{#each bills}}
                <tr class="billing-row" data-billing-period="{{billingPeriod}}">
                    <td class="table-cell">{{billNo}}</td>
                    <td class="table-cell">{{refNo}}</td>
                    <td class="table-cell">{{accountName}}</td>
                    <td class="table-cell">{{cuM}}</td>
                    <td class="table-cell">{{basicCharge}}</td>
                    <td class="table-cell">{{systemLossCharge}}</td>
                    <td class="table-cell">{{waterMaintenanceFund}}</td>
                    <td class="table-cell">{{currentCharges}}</td>
                    <td class="table-cell">{{previousUnpaidAccount}}</td>
                    <td class="table-cell">{{otherCharges}}</td>
                    <td class="table-cell">{{totalAmountDue}}</td>
                    <td class="table-cell">{{remarks}}</td>
                    <td class="table-cell">
                        <button class="report-btn" onclick="showReportModal({{refNo}})">Report</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Report Issue Modal -->
    <div id="reportModal" class="modal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeReportModal()">&times;</span>
            <h2>Report an Issue</h2>
            <form id="reportForm">
                <label for="reportRefNo">REF no</label>
                <input type="text" id="reportRefNo" name="reportRefNo" readonly>
                <label for="issueDescription">Issue Description</label>
                <textarea id="issueDescription" name="issueDescription" rows="4"></textarea>
                <button type="button" onclick="submitReport()">Submit</button>
            </form>
        </div>
    </div>

    <script src="/script.js"></script>

</body>
</html>
