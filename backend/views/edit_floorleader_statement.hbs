<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="edit_floorleader_statement.css">
    <title>Account Details</title>
</head>
<body>

<div class="navbar">
    <a href="#">Home</a>
    <a href="#">LOGOUT</a>
</div>
<div class="options">
    <a href="#">Tenant Accounts</a>
    <a href="#">Billings</a>
    <a href="#">Reports</a>
    <a href="#">Profile</a>
</div>

<div class="statement">
    <h2>Account Details</h2>
    <table>
        <thead>
            <tr>
                <th>REF no</th>
                <th>Account Name</th>
                <th>CU.M</th>
                <th>BASIC CHARGE</th>
                <th>SYSTEM LOSS CHARGE</th>
                <th>WATER MAINTENANCE FUND</th>
                <th>CURRENT CHARGES</th>
                <th>PREVIOUS UNPAID ACCOUNT</th>
                <th>OTHER CHARGES</th>
                <th>TOTAL AMOUNT DUE</th>
                <th>REMARKS</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each accounts}}
            <tr>
                <td>{{refNo}}</td>
                <td>{{accountName}}</td>
                <td>{{cuM}}</td>
                <td>{{basicCharge}}</td>
                <td>{{systemLossCharge}}</td>
                <td>{{waterMaintenanceFund}}</td>
                <td>{{currentCharges}}</td>
                <td>{{previousUnpaidAccount}}</td>
                <td>{{otherCharges}}</td>
                <td>{{totalAmountDue}}</td>
                <td>{{remarks}}</td>
                <td><button onclick="openEditModal({{refNo}})">Edit</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="buttons">
        <button onclick="confirmEdits()">Confirm Edits</button>
        <button onclick="cancelEdits()">Cancel</button>
    </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeEditModal()">&times;</span>
        <h2>Edit Account Details</h2>
        <form id="editForm">
            <label for="refNo">REF no</label>
            <input type="number" id="editRefNo" name="refNo" readonly>
            <label for="accountName">Account Name</label>
            <input type="text" id="editAccountName" name="accountName">
            <label for="cuM">CU.M</label>
            <input type="number" id="editCuM" name="cuM">
            <label for="basicCharge">BASIC CHARGE</label>
            <input type="number" id="editBasicCharge" name="basicCharge">
            <label for="systemLossCharge">SYSTEM LOSS CHARGE</label>
            <input type="number" id="editSystemLossCharge" name="systemLossCharge">
            <label for="waterMaintenanceFund">WATER MAINTENANCE FUND</label>
            <input type="number" id="editWaterMaintenanceFund" name="waterMaintenanceFund">
            <label for="currentCharges">CURRENT CHARGES</label>
            <input type="number" id="editCurrentCharges" name="currentCharges">
            <label for="previousUnpaidAccount">PREVIOUS UNPAID ACCOUNT</label>
            <input type="number" id="editPreviousUnpaidAccount" name="previousUnpaidAccount">
            <label for="otherCharges">OTHER CHARGES</label>
            <input type="number" id="editOtherCharges" name="otherCharges">
            <label for="totalAmountDue">TOTAL AMOUNT DUE</label>
            <input type="number" id="editTotalAmountDue" name="totalAmountDue">
            <label for="remarks">REMARKS</label>
            <input type="text" id="editRemarks" name="remarks">
            <button type="button" onclick="saveEdits()">Save</button>
        </form>
    </div>
</div>

<script src="edit_floorleader_statement.js"></script>

</body>
</html>
