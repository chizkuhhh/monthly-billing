    <title>Admin - Billings</title>
    <style>
        #buildings-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            min-width: 100%;
        }

        #buildings-container a {
            text-decoration: none;
            color: #292a2b;
            width: calc(25% - 20px);
            margin: 10px 10px;
        }

        #buildings-container a button {
            font-size: 16px;
            text-align: center;
            width: 100%;
            border: none;
            border-radius: 6px;
            background: #E1E0E1;
            min-height: 20vh;
        }
        #buildings-container a button:hover{
            background: #979797;
        }
        #buildings-container a button p {
            margin-top: 10px;
        }

        #buildings-container a button i {
            font-size: 20px;
        }

        h2 {
            margin: 20px 0;
        }
    </style>
</head>
