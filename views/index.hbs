        @import url('https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@100..900&display=swap');

        .kumbh-sans-bold {
            font-family: "Kumbh Sans", sans-serif;
            font-optical-sizing: auto;
            font-weight: 700;
            font-style: normal;
            font-variation-settings: "YOPQ" 300;
        }

        .kumbh-sans-light {
            font-family: "Kumbh Sans", sans-serif;
            font-optical-sizing: auto;
            font-weight: 300;
            font-style: normal;
            font-variation-settings: "YOPQ" 300;
        }

        header {
            background-color: inherit;
            box-shadow: none;
        }

        .headerlogo {
            width: 10%;
            height: 100%;
            object-fit: cover;
        }

        #grp_title h1 {
            font-size: 36px;
        }

        #grp_title h1:first-child {
            margin-right: 10px;
            margin-left: 10px;
        }

        .flex_col_center {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .flex_row_center {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }

        .eee {
            height: 20%;
            width: 90%;

            display: flex;
            flex-direction: row;
            justify-content: space-around;

            font-size: 20px;
            color: #292a2b;

            margin-left: 20%;
            margin-right: 20%;
            margin-bottom: 5%;
        }

        .eee_groups {
            background-color: #c4d4d2;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }

        .eee_groups h2,
        p {
            margin: 0px;
            padding: 0px;
        }

        .intro p {
            max-width: 45%;
        }

        footer {
            background-color: inherit;
            box-shadow: none;
        }
    </style>
